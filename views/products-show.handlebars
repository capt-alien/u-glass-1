<div class="col-md-6 margin-bottom-30">
  <!-- BEGIN product product-->
  <div class="product">
    <div class="product-title">
      <div class="caption">
        <i class="glyphicon glyphicon-cutlery"></i>
        <span class="caption-subject text-uppercase"> {{product.title}}</span>
        <span class="caption-helper">Product Review</span>
      </div>
      <div class="actions">
        <a href="/products/{{product._id}}/edit" class="btn">
          <i class="glyphicon glyphicon-pencil"></i>
          Edit
        </a>
        <a data-toggle="modal" data-target="#delete" class="btn">
          <i class="glyphicon glyphicon-trash"></i>
          Delete
        </a>
        <a href="/" class="btn btn-circle">
          <i class="glyphicon glyphicon-home"></i>
        </a>
      </div>
    </div>
    <div class="product-body">
      <h4>Description:</h4>
      <p>{{product.description}}</p>
      <small id="food-group">
        Food Group or Manufacturer ({{product.movieTitle}})
      </small>
    </div>
  </div>


  <div class="modal fade" id="delete" role="dialog">
    <div class="modal-dialog modal-sm">

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">WOAH!!!</h4>
        </div>
        <div class="modal-body">
          <p style="color:#ff7675;">Are you sure you want to remove this item?</p>
        </div>
        <div class="modal-footer">
          <form method="POST" action="/products/{{product._id}}?_method=DELETE">
          <button type="submit" class="btn btn-outline-secondary button-custom delete-custom">Delete {{product.title}}</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </form>
        </div>
      </div>

    </div>
  </div>
